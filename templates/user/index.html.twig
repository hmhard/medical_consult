{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}

    <a class="btn btn-secondary float-right" href="{{ path('app_user_new') }}">Register new</a>
    <h1>Users List</h1>

    <div class="card">

    <div class="card-body">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>Email</th>
               
             
                <th>Full Name</th>
              
                <th>Gender</th>
                <th>Is Active</th>
                <th>Phone</th>
                <th>Registered At</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
               
                <td>{{ user.fullName }}</td>
               
                <td>{{ user.gender }}</td>
                <td>{{ user.isActive ? 'Yes' : 'No' }}</td>
                <td>{{ user.phone }}</td>
                <td>{{ user.registeredAt ? user.registeredAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a  class="btn btn-primary btn-sm" href="{{ path('app_user_show', {'id': user.id}) }}">show</a>
                    <a  class="btn btn-warning btn-sm" href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
