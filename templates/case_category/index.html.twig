{% extends 'base.html.twig' %}

{% block title %}CaseCategory index{% endblock %}

{% block body %}
    <h1>Case Category List</h1>

    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for case_category in case_categories %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>{{ case_category.name }}</td>
                <td>{{ case_category.description }}</td>
                <td>
                    <a href="{{ path('app_case_category_show', {'id': case_category.id}) }}">show</a>
                    <a href="{{ path('app_case_category_edit', {'id': case_category.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_case_category_new') }}">Create new</a>
{% endblock %}
